<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.senac.cademeulivro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <uses-permission android:name="android.permission.INTERNET"/>

        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.edit.ObraDetalhadaEditActivity"/>
        <activity android:name=".activities.ObraDetalhadaActivity"/>
        <activity android:name=".activities.CadastroPagerActivity">
        </activity>
    </application>

</manifest>